{
  "environment": "staging",
  "description": "Staging environment - production-like settings with safety measures",
  "proxy": {
    "provider": "smartproxy",
    "host": "gate.smartproxy.com",
    "port": 10000,
    "username": "${SMARTPROXY_USERNAME}",
    "password": "${SMARTPROXY_PASSWORD}",
    "sticky_sessions": true,
    "session_duration": 30,
    "use_free_proxies": false,
    "backup_provider": "free",
    "notes": "SmartProxy with fallback to free proxies for testing"
  },
  "email": {
    "imap_host": "outlook.office365.com",
    "imap_port": 993,
    "max_emails_per_account": 50,
    "batch_size": 15,
    "connection_timeout": 20,
    "retry_attempts": 3,
    "notes": "Production-like email processing limits"
  },
  "behavior": {
    "enable_human_behavior": true,
    "fatigue_simulation": true,
    "min_delay_seconds": 2.0,
    "max_delay_seconds": 6.0,
    "distraction_probability": 0.05,
    "break_probability": 0.02,
    "inter_account_delay_min": 8.0,
    "inter_account_delay_max": 15.0,
    "notes": "Full human behavior simulation for realistic testing"
  },
  "logging": {
    "level": "DEBUG",
    "log_dir": "logs",
    "max_file_size": 26214400,
    "backup_count": 5,
    "enable_console": true,
    "enable_file": true,
    "colored_output": false,
    "notes": "Debug logging with file persistence"
  },
  "security": {
    "dry_run_mode": true,
    "enable_rate_limiting": true,
    "max_concurrent_accounts": 1,
    "require_confirmation": true,
    "backup_emails_before_move": true,
    "max_daily_emails": 500,
    "notes": "DRY RUN enforced in staging with full safety measures"
  },
  "accounts": {
    "file": "config/accounts_staging.csv",
    "validate_domains": true,
    "require_app_passwords": false,
    "backup_before_processing": true,
    "notes": "Staging accounts with validation"
  },
  "monitoring": {
    "enable_metrics": true,
    "report_errors": true,
    "performance_tracking": true,
    "session_analytics": true,
    "notes": "Full monitoring for pre-production validation"
  }
}