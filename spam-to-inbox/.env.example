# Configuration environment Spam-to-Inbox

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# Proxy Configuration
PROXY_USERNAME=sp_your_username
PROXY_PASSWORD=your_proxy_password
PROXY_HOST=gate.smartproxy.com
PROXY_PORT=10000

# Email Processing
MAX_EMAILS_PER_ACCOUNT=50
IMAP_HOST=outlook.office365.com
IMAP_PORT=993

# Anti-Detection
ENABLE_HUMAN_BEHAVIOR=true
FATIGUE_SIMULATION=true
RANDOM_DELAYS=true
MIN_DELAY_SECONDS=2
MAX_DELAY_SECONDS=8

# Session Management
SESSION_DURATION_MINUTES=30
CLEANUP_EXPIRED_SESSIONS=true
INTER_ACCOUNT_DELAY_MIN=8
INTER_ACCOUNT_DELAY_MAX=15

# Safety
DRY_RUN_MODE=false
ENABLE_RATE_LIMITING=true
MAX_CONCURRENT_ACCOUNTS=1